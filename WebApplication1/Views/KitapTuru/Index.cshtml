@model List<KitapTuru>
@if (TempData["basarili"] != null)
{
    <h2 style="color: red">@TempData["basarili"]</h2>
}

<div class="container">

    <div class="row pt-3 pb-4">
        <h1>
            Kitap Türleri
        </h1>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Kitap Türleri
            </th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var KitapTuru in Model)
        {
            <tr>
                <td>@KitapTuru.Id</td>
                <td>@KitapTuru.Ad</td>
                <td>
                    <a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@KitapTuru.Id" type="button" class="btn btn-success" style="width: 100px;">Güncelle</a>
                </td>
                <td>
                    <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@KitapTuru.Id" type="button" class="btn btn-danger" style="width: 100px;">Sil</a>
                </td>
            </tr>
        }

        </tbody>


    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Kitap Türü Oluştur
            </a>
        </div>
    </div>
</div>